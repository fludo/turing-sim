<?xml version="1.0" encoding="UTF-8"?>

<turing type="simple" variant="unbound" name="Even-int-checker" description="Check if tape content is an even integer">
        <input alphabet="1,0,#"/>
        <tape alphabet="1,0,#" content="0#"/>
        <states>
                <state label="q0"/>
                <state label="q1"/>
                <state label="qreject"/>
                <state label="qaccept"/>
        </states>
        <starting state="q0"/>
        <accepting states="qaccept"/>
        <rejecting states="q0,qreject"/>

        <transitions>
                <transition from_state="q0" tapeSymbol="0" to_state="q0" new_tapeSymbol="0" direction="R"/>
                <transition from_state="q0" tapeSymbol="1" to_state="q0" new_tapeSymbol="1" direction="R"/>
                <transition from_state="q0" tapeSymbol="#" to_state="q1" new_tapeSymbol="#" direction="L"/>
                <!-- Simply accept is lsb is 0 ! -->
                <transition from_state="q1" tapeSymbol="0" to_state="qaccept" new_tapeSymbol="0" direction="R"/>
                <transition from_state="q1" tapeSymbol="1" to_state="qreject" new_tapeSymbol="1" direction="R"/>
        </transitions>
</turing>